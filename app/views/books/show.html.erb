<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: @user %>
      <%= render "books/form", book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(@user.id) do %>
               　　<%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thubm" , fallback: "no-image_icon.jpg", size:"40x40"  %>
              　<% end %>
            </td>
            <td><%= link_to @user.name, user_path(@user) %></td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path, class:'btn btn-sm btn-success' %></td>
              <td><%= link_to "Destroy", book_path, method: :delete, class:'btn btn-sm btn-danger'%></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>